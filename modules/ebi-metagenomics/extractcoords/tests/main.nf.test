                    [ id:'test', single_end:false ], // meta map
                    file("${moduleDir}/tests/test_matched_seqs_with_coords.txt", checkIfExists: true),
                ]
                input[2] = true
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
